<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController">
  <children>
    <VBox spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" alignment="CENTER">
      <padding>
        <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
      </padding>
      <ImageView fitHeight="120.0" preserveRatio="true">
        <image>
          <Image url="images/sharetea_logo.png"/>
        </image>
      </ImageView>
      <Label text="Store Login">
        <font>
          <Font name="System Bold" size="24.0"/>
        </font>
      </Label>
      <PasswordField fx:id="pinField" promptText="Enter PIN"/>
      <Button text="Enter"/>
    </VBox>
  </children>
</AnchorPane>
